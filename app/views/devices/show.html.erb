<%- model_class = Device -%>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:house) %>:</strong></dt>
  <dd><%= @device.house.name if @device.house %></dd>
  <dt><strong><%= model_class.human_attribute_name(:room) %>:</strong></dt>
  <dd><%= @device.room if @device.room %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type) %>:</strong></dt>
  <dd><%= DEVICE_TYPES.key(@device.type) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:note) %>:</strong></dt>
  <dd><%= @device.note %></dd>
  <dt><strong><%= model_class.human_attribute_name(:id_at_hgw) %>:</strong></dt>
  <dd><%= @device.id_at_hgw %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              devices_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_device_path(@device), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              device_path(@device),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
