<%- model_class = House -%>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:ip_address) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.id %></td>
        <td><%= house.name %></td>
        <td><%= house.ip_address %></td>
        <td>
          <%= link_to 'Show', house_path(house), class: 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_house_path(house), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      house_path(house),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
    <tr>
      <td colspan=4>
        <%= page_entries_info(@houses) %>
      </td>
    </tr>
  </tbody>
</table>
<div class="text-center">
  <%= paginate(@houses) %>
</div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_house_path,
            :class => 'btn btn-primary' %>
