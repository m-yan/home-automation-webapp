<%- model_class = OperationType -%>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @operation_type.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:device_type) %>:</strong></dt>
  <dd><%= DEVICE_TYPES.key(@operation_type.device_type) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:method) %>:</strong></dt>
  <dd><%= @operation_type.method %></dd>
  <br />
  <dt><strong><%= model_class.human_attribute_name(:request_body) %>:</strong></dt>
  <dd><pre><%= @operation_type.request_body %></pre></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              operation_types_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_operation_type_path(@operation_type), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              operation_type_path(@operation_type),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
